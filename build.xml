<project name="junit-example">

  <property name="test.build.dir" value="."/>
  <property name="test.src.dir" value="."/>

  <path id="classpath.test">
    <pathelement location="/usr/share/java/junit4-4.5.jar"/>
  </path>

  <javac destdir="."
         source="*.java"
         classpath="testRunner"
         debug="on">
    <src path="."/>
    <include name="/usr/share/java/junit4-4.5"/>
    <include name="joejoooe4.jar"/>
  </javac>

  <target name="run" depends="compile, input-runargs" description="run the project">
  <!-- You can use exec here, depending on your needs -->
    <java classname="testRunner">
      <classpath>
        <path refid="classpath.test"/>
      </classpath>
    </java>
  </target>


<?xml version="1.0"?>
<project name="JUNIT" default="main" basedir="..">

  <!-- Define the classpath which includes the junit.jar and the classes after compiling-->
	<path id="junit.class.path">
		<pathelement location="/usr/share/java/junit4-4.5.jar" />
		<pathelement location="joejoooe4.jar" />
		<pathelement location="." />
	</path>

	<target name="junit">
		<junit printsummary="yes" haltonfailure="no">
			<classpath refid="junit.class.path" />
      <test name="testRunner" haltonfailure="no" outfile="result">
      <formatter type="plain"/>
      <formatter type="xml"/>
    </test>
		</junit>
	</target>

	<target name="main" depends="junit">
		<description>Main target</description>
	</target>

</project>

<project name="junit-example">
  <property name="main.build.dir" value="."/>
  <property name="main.src.dir" value="."/>
  <property name="test.build.dir" value="."/>
  <property name="test.src.dir" value="."/>

  <path id="classpath.test">
    <pathelement location="/usr/share/java/junit4-4.5.jar"/>
  </path>

  <target name="test" depends="test-compile">
    <junit printsummary="on" haltonfailure="yes" fork="true">
        <classpath>
          <path refid="classpath.test"/>
          <pathelement location="${test.build.dir}"/>
        </classpath>
        <formatter type="brief" usefile="false" />
        <batchtest>
            <fileset dir="${test.src.dir}" includes="**/*Test.java" />
        </batchtest>
    </junit>
  </target>
</project>
